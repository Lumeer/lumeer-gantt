{
  "name": "@lumeer/lumeer-gantt",
  "version": "1.2.8",
  "description": "A simple, modern, interactive gantt library for the web",
  "main": "dist/lumeer-gantt.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs && tsc",
    "build:watch": "rollup -cw --bundleConfigAsCjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier es6 --write \"{src/*,tests/*,rollup.config}.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lumeer/lumeer-gantt.git"
  },
  "keywords": [
    "gantt",
    "svg",
    "simple gantt",
    "project timeline",
    "interactive gantt",
    "project management"
  ],
  "author": "Lumeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lumeer/lumeer-gantt.git/issues"
  },
  "homepage": "https://github.com/Lumeer/lumeer-gantt.git",
  "dependencies": {
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "deepmerge": "^4.3.1",
    "jest": "^29.5.0",
    "prettier": "~2.8.8",
    "rollup": "^3.25.2",
    "@rollup/plugin-terser": "^0.4.3",
    "rollup-plugin-sass": "^1.12.19",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-watch": "^4.3.1",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.1.3"
  },
  "eslintIgnore": [
    "dist"
  ],
  "directories": {
    "test": "tests"
  }
}
